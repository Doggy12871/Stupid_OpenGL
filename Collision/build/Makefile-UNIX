collision : collision.cpp display.cpp draw.cpp update.cpp game.cpp global.cpp event.cpp
	g++ -o collision collision.cpp collision.cpp display.cpp draw.cpp update.cpp game.cpp global.cpp event.cpp -lm -lglut -lGL -lGLU

clean :
	rm collision
